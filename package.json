{
  "name": "react-openai-lambda-cdk",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "type": "commonjs",
  "scripts": {
    "build": "tsc -p .",
    "cdk": "cdk",
    "synth": "cdk synth",
    "diff": "cdk diff",
    "deploy": "cdk deploy",
    "destroy": "cdk destroy",
    "setup-secret": "node scripts/setup-secret.js",
    "deploy:secure": "npm run setup-secret && npm run deploy",
    "upload-documents": "node scripts/upload-documents.js",
    "refresh-documents": "node scripts/refresh-documents.js",
    "list-documents": "node scripts/list-documents.js",
    "setup-weather-api": "node scripts/setup-weather-api.js",
    "test-weather": "node scripts/test-weather-api.js",
    "process-existing-documents": "node scripts/process-existing-documents.js",
    "deploy:rag": "npm run deploy:secure && echo 'Deploy completado. Ahora ejecuta: npm run upload-documents <bucket-name>'",
    "deploy:api": "cdk deploy ApiStack --app 'npx ts-node bin/app.ts'",
    "deploy:frontend": "cdk deploy FrontendStack --app 'npx ts-node bin/app.ts'",
    "deploy:all": "npm run deploy:api && npm run deploy:frontend",
    "deploy:lambda": "npm run build:lambda && cdk deploy ApiStack --app 'npx ts-node bin/app.ts'"
  },
  "devDependencies": {
    "aws-cdk": "2.153.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@aws-sdk/client-opensearch": "^3.864.0",
    "@aws-sdk/client-opensearchserverless": "^3.864.0",
    "@aws-sdk/client-s3": "^3.864.0",
    "@aws-sdk/client-secrets-manager": "^3.864.0",
    "@types/aws-lambda": "^8.10.152",
    "aws-cdk-lib": "2.153.0",
    "constructs": "^10.3.0",
    "openai": "^5.12.2"
  }
}
